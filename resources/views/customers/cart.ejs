<section class="cart py-16">
    <% if(session.cart) { %>
    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
<img class="h-10" src="/img/cart.png" alt="order summary">
<h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div class="pizza-list">
            <% for(let pizza of Object.values(session.cart.items)) { %>
            <div class="flex items-center my-8">
                <img class="h-20" src="/img/<%= pizza.item.image %>" alt="pizza">
                <div class="flex-1 ml-4">
                    <h1><%= pizza.item.name %></h1>
                    <span><%= pizza.item.size %></span>
                </div>
                <span class="flex-1"><%= pizza.qty %> Pcs</span>
                <span class="font-bold text-lg">₹ <%= pizza.item.price * pizza.qty  %></span>
            </div>
            <% } %>
        </div>
        <hr>
        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total Amount:</span>
                <span class="amaount text-2xl font-bold ml-2">₹ <%= session.cart.totalPrice %></span>
            </div>
            <div>
                <form action="" class="mt-12">
                    <input class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Phone Number">
                    <input class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
                    <!-- <div>
                        <button type="submit" class="px-6 py-2 rounded-full text-white font-bold mt-6 btn-primary">Order Now</button>
                    </div> -->
                </form>
                <div>
                    <a href="" class="inline-block cursor-pointer px-6 py-2 rounded-full text-white font-bold mt-6 btn-primary">Login to continue</a>
                </div>
            </div>
        </div>
    </div>
    <% }else { %>
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
                <img class="h-60 mx-auto" src="/img/empty-cart.jpg"  alt="empty card">
                <h1 class="text-3xl font-bold mb-2"> Your Cart is Empty</h1>
                <p class="text-gray-500 text-lg mb-12">You probably haven't ordered a pizza yet.</p>
                <a href="/resources/views/menu.ejs" class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Explore Menu</a>
        </div>
    </div>
    <% } %>
</section>