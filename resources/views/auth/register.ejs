<section class="login">
    <div class="min-h-screen flex items-center justify-center py-0 px-4 sm:px-6 lg:px-8">
        <div class="login-box max-w-md w-full space-y-4 rounded-full">
          <div class="mt-12 mx-6">
            <img class="mx-auto h-12 w-auto" src="/img/logo.png" alt="Workflow">
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
              Regster to unlock awesome new features
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
              Or
              <a href="/login" class="font-medium color font-bold px-2">
                Already have Account?
              </a>
            </p>
          </div>
          <form class="mt-8 space-y-6 mx-6" action="/register" method="POST">
            <% if(messages.error){ %>
              <span class="text-red-500 text-sm"><%= messages.error %>></span>
            <% } %>
            <input type="hidden" name="remember" value="true">
            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    <label for="name" class="sr-only">Name</label>
                    <input value="<%= messages.name %>" id="name" name="name" type="text" autocomplete="text" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Enter your name">
                  </div>
              <div>
                <label for="email-address" class="sr-only">Email address</label>
                <input value="<%= messages.email %>"id="email-address" name="email" type="email" autocomplete="email" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Email address">
              </div>
              <div>
                <label for="password" class="sr-only">Password</label>
                <input id="password" name="password" type="password" autocomplete="current-password" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Password">
              </div>
            </div>
      
            <!-- <div class="flex items-center justify-between">
              <div class="flex items-center">
                <input id="remember-me" name="remember-me" type="checkbox" class="h-4 w-4 color focus:ring-orange-500 border-gray-300 rounded">
                <label for="remember-me" class="ml-2 block text-sm text-gray-900 font-bold">
                  Remember me
                </label>
              </div>
            </div> -->
      
            <div>
              <button type="submit" class=" btn-primary mb-16 group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white  focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
                <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                  <!-- Heroicon name: solid/lock-closed -->
                  <svg class="h-5 w-5 color" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                  </svg>
                </span>
                Register
              </button>
            </div>
          </form>
        </div>
      </div>
      
    </section>